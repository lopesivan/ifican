<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:background="@color/green"
    android:gravity="center"
    android:id="@+id/container"
    android:clickable="true"
    tools:context="com.luciofm.ifican.app.ui.MorphingButtonCodeFragment">

    <com.luciofm.ifican.app.widget.TextView
        android:id="@+id/text1"
        android:text="Morphing Button"
        android:layout_marginTop="30dp"
        android:gravity="center"
        android:textSize="90sp"
        android:layout_gravity="center_horizontal|top"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textColor="@color/pink"
        app:typeFace="YanoneKaffeesatz-Regular.ttf"/>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="horizontal"
        android:layout_margin="20dp"
        android:id="@+id/container2"
        android:visibility="gone"
        tools:visibility="visible"
        android:gravity="center">
        <LinearLayout
            android:layout_width="400dp"
            android:layout_height="match_parent"
            android:orientation="vertical"
            android:background="@color/pink"
            android:padding="20dp"
            android:id="@+id/container3"
            android:visibility="visible"
            android:gravity="center"
            android:layout_gravity="center">
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_margin="20dp"
                android:orientation="vertical"
                android:background="@color/green"
                android:id="@+id/reg_container">
                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:id="@+id/textRegister"
                    android:text="Register"
                    android:textSize="20sp"
                    android:gravity="center"
                    android:padding="12dp"
                    android:textColor="@color/pink"
                    android:background="@drawable/button_green_pink_pressed_animated"/>
                <EditText
                    android:id="@+id/editReg1"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:textColor="@color/pink"
                    android:textColorHint="@color/soft_pink"
                    android:hint="email"
                    android:inputType="textEmailAddress"
                    android:background="@color/soft_light_yellow"
                    android:padding="10dp"
                    android:layout_marginLeft="20dp"
                    android:layout_marginRight="20dp"
                    android:layout_marginBottom="20dp"
                    android:visibility="gone"/>
                <EditText
                    android:id="@+id/editReg2"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:textColor="@color/pink"
                    android:textColorHint="@color/soft_pink"
                    android:hint="password"
                    android:inputType="textPassword"
                    android:background="@color/soft_light_yellow"
                    android:padding="10dp"
                    android:layout_marginLeft="20dp"
                    android:layout_marginRight="20dp"
                    android:layout_marginBottom="20dp"
                    android:visibility="gone"/>
                <EditText
                    android:id="@+id/editReg3"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:textColor="@color/pink"
                    android:textColorHint="@color/soft_pink"
                    android:hint="repeat password"
                    android:inputType="textPassword"
                    android:background="@color/soft_light_yellow"
                    android:padding="10dp"
                    android:layout_marginLeft="20dp"
                    android:layout_marginRight="20dp"
                    android:layout_marginBottom="20dp"
                    android:visibility="gone"/>
                <Button
                    android:id="@+id/buttonReg1"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:background="@drawable/button_pink"
                    android:textColor="@color/green"
                    android:text="Register"
                    android:layout_marginLeft="20dp"
                    android:layout_marginRight="20dp"
                    android:layout_marginBottom="20dp"
                    android:visibility="gone"/>
            </LinearLayout>
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_margin="20dp"
                android:orientation="vertical"
                android:background="@color/green"
                android:id="@+id/login_container">
                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:id="@+id/textLogin"
                    android:text="Login"
                    android:textSize="20sp"
                    android:gravity="center"
                    android:padding="12dp"
                    android:layout_gravity="center"
                    android:background="@drawable/button_green_pink_pressed_animated"
                    android:textColor="@color/pink"/>
                <EditText
                    android:id="@+id/editLog1"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:textColor="@color/pink"
                    android:textColorHint="@color/soft_pink"
                    android:hint="email"
                    android:inputType="textEmailAddress"
                    android:background="@color/soft_light_yellow"
                    android:padding="10dp"
                    android:layout_margin="20dp"
                    android:visibility="gone"/>
                <EditText
                    android:id="@+id/editLog2"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:textColor="@color/pink"
                    android:textColorHint="@color/soft_pink"
                    android:hint="password"
                    android:inputType="textPassword"
                    android:background="@color/soft_light_yellow"
                    android:padding="10dp"
                    android:layout_marginLeft="20dp"
                    android:layout_marginRight="20dp"
                    android:layout_marginBottom="20dp"
                    android:visibility="gone"/>
                <Button
                    android:id="@+id/buttonLog1"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:background="@drawable/button_pink"
                    android:textColor="@color/green"
                    android:text="Login"
                    android:layout_marginLeft="20dp"
                    android:layout_marginRight="20dp"
                    android:layout_marginBottom="20dp"
                    android:visibility="gone"/>
            </LinearLayout>
        </LinearLayout>

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:id="@+id/text2"
            android:visibility="gone"
            tools:visibility="visible"
            android:fontFamily="monospace"
            android:textSize="30sp"
            android:textColor="@android:color/white"
            android:background="@color/soft_black"
            android:layout_marginLeft="20dp"
            android:layout_marginRight="20dp"
            android:padding="12dp"/>
    </LinearLayout>
</LinearLayout>
