<FrameLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:background="@color/accent_blue_50"
    android:animateLayoutChanges="true"
    android:id="@+id/container"
    android:clickable="true"
    tools:context="com.luciofm.ifican.app.ui.TransitionsExampleFragment">

    <com.luciofm.ifican.app.widget.TextView
        android:id="@+id/text1"
        android:layout_marginTop="@dimen/padding"
        android:text="EXEMPLOS"
        android:gravity="center"
        android:layout_centerInParent="true"
        android:textSize="@dimen/text_title"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:padding="@dimen/padding"
        android:textColor="@color/accent_pink"
        android:background="@color/accent_blue_50"
        android:elevation="4dp"
        app:typeFace="YanoneKaffeesatz-Regular.ttf"/>

    <FrameLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_marginTop="100dp"
            android:animateLayoutChanges="true"
            android:weightSum="2"
            android:gravity="center">

            <pl.droidsonroids.gif.GifImageView
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:padding="10dp"
                android:id="@+id/gif1"
                android:visibility="gone"
                tools:visibility="visible"
                android:src="@drawable/sappear1" />
            <pl.droidsonroids.gif.GifImageView
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:padding="10dp"
                android:layout_weight="1"
                android:id="@+id/gif2"
                android:visibility="gone"
                tools:visibility="visible"
                android:src="@drawable/sappear2" />
        </LinearLayout>
        <pl.droidsonroids.gif.GifImageView
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_marginTop="20dp"
            android:padding="10dp"
            android:id="@+id/gif3"
            android:visibility="gone"
            tools:visibility="visible"
            android:src="@drawable/crop" />
    </FrameLayout>
</FrameLayout>
