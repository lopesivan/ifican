<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:background="@color/accent_blue"
    android:animateLayoutChanges="true"
    android:gravity="center"
    android:id="@+id/container"
    android:clickable="true"
    tools:context="com.luciofm.ifican.app.ui.TouchFeedbackCodeFragment">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="1"
        android:animateLayoutChanges="true"
        android:layout_marginRight="30dp"
        android:layout_marginLeft="30dp"
        android:layout_marginTop="30dp"
        android:id="@+id/container2"
        android:visibility="gone"
        tools:visibility="visible"
        android:gravity="center">

        <ImageView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/image"
            android:src="@drawable/android"/>
        <TextView
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:id="@+id/text2"
            android:visibility="gone"
            tools:visibility="visible"
            style="@style/TextCode" />
    </LinearLayout>

    <com.luciofm.ifican.app.widget.TextView
        android:id="@+id/text1"
        android:text="ViewPropertyAnimator"
        android:layout_marginBottom="@dimen/padding"
        android:padding="@dimen/padding"
        android:gravity="center"
        android:textSize="@dimen/text_title_big"
        android:layout_gravity="center_horizontal|top"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textColor="@color/accent_pink"
        app:typeFace="YanoneKaffeesatz-Regular.ttf"/>

</LinearLayout>
