<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:background="@color/pink"
    android:animateLayoutChanges="true"
    android:gravity="center"
    android:id="@+id/container"
    android:clickable="true"
    tools:context="com.luciofm.ifican.app.ui.SoftTransitionsFragment">

    <com.luciofm.ifican.app.widget.TextView
        android:id="@+id/text1"
        android:text="Transições mais\nSuaves"
        android:padding="20dp"
        android:gravity="center"
        android:textSize="110sp"
        android:layout_gravity="center_horizontal|top"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textColor="@color/pink"
        android:background="@color/pink"
        tools:textColor="@color/green"
        app:typeFace="YanoneKaffeesatz-Regular.ttf"/>

    <com.luciofm.ifican.app.widget.TextView
        android:id="@+id/text2"
        android:layout_marginTop="100dp"
        android:text="EXEMPLOS"
        android:gravity="center"
        android:layout_centerInParent="true"
        android:textSize="70sp"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:padding="20dp"
        android:textColor="@color/pink"
        android:background="@drawable/pressed_pink_on_green_animated"
        tools:background="@color/green"
        android:visibility="gone"
        tools:visibility="visible"
        app:typeFace="YanoneKaffeesatz-Regular.ttf"/>
</LinearLayout>