<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:background="@color/accent_pink"
    android:animateLayoutChanges="true"
    android:gravity="center"
    android:id="@+id/container"
    android:clickable="true"
    tools:context="com.luciofm.ifican.app.ui.SoftTransitionsFragment">

    <com.luciofm.ifican.app.widget.TextView
        android:id="@+id/text1"
        android:text="Transições mais\nSuaves"
        android:padding="20dp"
        android:gravity="center"
        android:textSize="@dimen/text_title_big"
        android:layout_gravity="center_horizontal|top"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textColor="@color/accent_pink"
        android:background="@color/accent_pink"
        tools:textColor="@color/accent_blue_50"
        app:typeFace="YanoneKaffeesatz-Regular.ttf"/>

    <com.luciofm.ifican.app.widget.TextView
        android:id="@+id/text2"
        android:layout_marginTop="100dp"
        android:text="EXEMPLOS"
        android:gravity="center"
        android:layout_centerInParent="true"
        android:textSize="@dimen/text_title"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:padding="@dimen/padding"
        android:textColor="@color/accent_pink"
        android:background="@drawable/pressed_blue_animated"
        tools:background="@color/accent_blue_50"
        android:visibility="gone"
        tools:visibility="visible"
        app:typeFace="YanoneKaffeesatz-Regular.ttf"/>
</LinearLayout>