<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:background="@color/orange"
    android:animateLayoutChanges="true"
    android:gravity="center"
    android:id="@+id/container"
    android:clickable="true"
    tools:context="com.luciofm.ifican.app.ui.TouchFeedbackCodeFragment">

    <com.luciofm.ifican.app.widget.TextView
        android:id="@+id/text1"
        android:text="Touch Feedback"
        android:padding="20dp"
        android:gravity="center"
        android:textSize="80sp"
        android:layout_gravity="center_horizontal|top"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textColor="@color/orange"
        android:background="@color/pink"
        app:typeFace="YanoneKaffeesatz-Regular.ttf"/>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="1"
        android:animateLayoutChanges="true"
        android:layout_margin="30dp"
        android:id="@+id/container2"
        android:visibility="gone"
        tools:visibility="visible"
        android:gravity="center">

        <com.luciofm.ifican.app.widget.TextView
            android:id="@+id/text2"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginRight="40dp"
            android:textColor="@color/green"
            android:padding="20dp"
            android:textSize="70sp"
            android:clickable="true"
            android:background="@drawable/pressed_pink_on_green"
            android:text="TOUCH ME!!!"/>

        <com.luciofm.ifican.app.widget.TextView
            android:id="@+id/text3"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="40dp"
            android:textColor="@color/green"
            android:gravity="center"
            android:padding="20dp"
            android:clickable="true"
            android:textSize="70sp"
            android:background="@drawable/pressed_pink_on_green_animated"
            android:text="TOUCH ME!!!\ngently"/>

        <TextView
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:id="@+id/text4"
            android:visibility="gone"
            android:fontFamily="monospace"
            android:textSize="30sp"
            android:textColor="@android:color/white"
            android:background="@color/soft_black"
            android:layout_margin="30dp"
            android:padding="16dp"/>
    </LinearLayout>
</LinearLayout>
