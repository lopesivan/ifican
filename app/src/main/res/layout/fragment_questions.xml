            android:textColor="@color/pink"
            android:text="R"
            app:typeFace="YanoneKaffeesatz-Bold.ttf"/>
        <com.luciofm.ifican.app.widget.TextView
            android:gravity="center"
            android:textSize="130sp"
            android:layout_gravity="center"
